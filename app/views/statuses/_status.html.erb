<div id="<%= dom_id status %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= status.title %>
  </p>

  <% if action_name != "show" %>
    <div class="flex flex-row gap-2">
      <%= link_to "Show this status", status, class: "btn btn-primary" %>
      <%= link_to 'Edit this status', edit_status_path(status), class: "btn btn-primary" %>
      <%= button_to 'Destroy this status', status_path(status), method: :delete, class: "btn btn-danger" %>
    </div>
  <% end %>
</div>
