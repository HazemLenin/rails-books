<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @status %>

    <div class="flex flex-row gap-2">
      <%= link_to 'Back to statuses', statuses_path, class: "btn btn-primary" %>
      <%= link_to 'Edit this status', edit_status_path(@status), class: "btn btn-primary" %>
      <%= button_to 'Destroy this status', status_path(@status), method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>
