<%= form_with(model: [@book, @review], class: "contents", id: "review-form") do |form| %>
  <% if @review.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
        <% @review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :add_review %>
    <%= form.text_area :content, class: "form-control h-40", id: "content-input" %>
  </div>

  <div class="form-group">
    <%= form.label :rate %>
    <%= form.select :rate, [0.0, 0.5, 1.0, 1.5, 2.0, 2.5, 3.0, 4.0, 4.5, 5.0], {}, { class: "form-control", id: "rate-input" } %>
  </div>

  <div class="inline">
    <%= form.submit class: "btn btn-primary w-full" %>
  </div>
<% end %>
